# Server Configuration
PORT=9090
NODE_ENV=development

# Redis Configuration
# For local Redis: use localhost and default port 6379
# For Redis Cloud: get these from your Redis Cloud dashboard
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=   # Required for Redis Cloud (leave empty for local Redis)
REDIS_USERNAME=   # Required for Redis Cloud (usually 'default', leave empty for local Redis)

# SMS Provider Selection (choose one: hubtel|twilio|mnotify|arkesel)
SMS_PROVIDER=hubtel

# Hubtel Configuration (Ghana)
HUBTEL_CLIENT_ID=
HUBTEL_CLIENT_SECRET=
HUBTEL_SENDER_ID=

# Twilio Configuration (International)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# Mnotify Configuration (Ghana)
MNOTIFY_API_KEY=
MNOTIFY_SENDER_ID=

# Arkesel Configuration (Ghana)
ARKESEL_API_KEY=
ARKESEL_SENDER_ID=

# Email Provider Selection (choose one: smtp|sendgrid|aws-ses|mailgun)
EMAIL_PROVIDER=smtp

# SMTP Configuration
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=
SMTP_FROM_NAME=BlazeSend
SMTP_USE_TLS=true
